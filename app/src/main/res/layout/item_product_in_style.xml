<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginHorizontal="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_8sdp"
    android:background="@drawable/shape_base_text"
    android:elevation="@dimen/_5sdp">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgProductPhoto"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/image53"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvProductName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/shape_text_category_item"
        android:elevation="@dimen/_5sdp"
        android:gravity="center"
        android:text="T-shirt"
        android:padding="@dimen/_4sdp"
        android:textColor="#393939"
        android:textDirection="locale"
        android:textSize="@dimen/_12sdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imgProductPhoto"
        app:layout_constraintStart_toStartOf="@+id/imgProductPhoto" />


    <View
        android:id="@+id/vProductColor"
        android:layout_width="@dimen/_18sdp"
        android:layout_height="@dimen/_17sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/text_shape"
        android:textAllCaps="false"
        android:textSize="@dimen/_14ssp"
        app:layout_constraintEnd_toEndOf="@+id/imgProductPhoto"
        app:layout_constraintStart_toStartOf="@+id/imgShareIcon"
        app:layout_constraintTop_toBottomOf="@+id/imgShareIcon" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgFavoriteIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/heart_selector"
        app:layout_constraintEnd_toEndOf="@+id/imgProductPhoto"
        app:layout_constraintTop_toTopOf="@+id/imgProductPhoto" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgShareIcon"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:adjustViewBounds="false"
        android:background="@drawable/send_icon_selector"
        android:clickable="false"
        android:contextClickable="false"
        app:layout_constraintEnd_toEndOf="@+id/imgProductPhoto"
        app:layout_constraintTop_toBottomOf="@+id/imgFavoriteIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>
