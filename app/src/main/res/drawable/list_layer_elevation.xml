<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


  <!-- background color -->
    <item
        android:bottom="3px"
        android:left="3px"
        android:right="3px"
        android:top="3px">
        <shape android:shape="rectangle" >
            <solid android:color="#FFFFFF" />
            <stroke android:width="@dimen/_4sdp" android:color="#DDD8D8"/>
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="180"
                android:centerColor="#00FF0000"
                android:centerX="0.9"
                android:endColor="#D0F3F3F3"
                android:startColor="@color/white" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>
    <!-- over right shadow -->
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerX="0.9"
                android:endColor="#D0F3F3F3"
                android:startColor="#00FFFFFF" />
            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="-90"
                android:centerColor="#00FF0000"
                android:centerX="0.9"
                android:endColor="#D0F3F3F3"
                android:startColor="#00FFFFFF" />

            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:angle="360"
                android:centerColor="#00FF0000"
                android:centerX="0.9"
                android:endColor="#D0F3F3F3"
                android:startColor="#00FFFFFF" />

            <corners android:radius="@dimen/_20sdp" />
        </shape>
    </item>
    <!-- over top shadow -->

</layer-list>

