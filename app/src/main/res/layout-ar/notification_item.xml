<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_4sdp"
    android:padding="@dimen/_7sdp"
    android:elevation="@dimen/_2sdp"
    android:layout_marginHorizontal="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_5sdp"
    android:id="@+id/cardViewId"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraint_layout2"
        android:background="@color/white">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgNotificationPhoto"
            android:layout_width="@dimen/_85sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginVertical="@dimen/_8sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/image53" />

    <!--=======================================================================================================-->

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_marginVertical="@dimen/_5sdp"
        android:paddingStart="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgNotificationPhoto"
        app:layout_constraintTop_toTopOf="parent">

        <!--=======================================================================================================-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNotificationTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/a_title_prodect_item"
            android:fontFamily="@font/cairo_semi_bold"
            android:textDirection="locale"
            android:layout_marginTop="@dimen/_11sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <!--=======================================================================================================-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNotificationDescription"
            android:layout_width="@dimen/_180sdp"
            android:fontFamily="@font/cairo_semi_bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:text="@string/description"
            android:lines="2"
            android:textDirection="locale"
            android:textColor="@color/o_background_boxes_code"
            android:textSize="@dimen/_14ssp"
            android:textStyle="normal" />

        <!--=======================================================================================================-->

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNotificationDate"
            android:layout_width="match_parent"
            android:fontFamily="@font/cairo_semi_bold"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_1sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textDirection="locale"
            android:gravity="end"
            android:textColor="@color/a_provider_color"
            android:textSize="@dimen/_12ssp"
            android:textStyle="bold" />





    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>